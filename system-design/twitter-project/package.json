{
    "name": "twitter-service",
    "version": "1.0.0",
    "description": "Production-ready Twitter-like service with TypeScript, PostgreSQL, and Redis",
    "main": "dist/app.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
        "build": "tsc",
        "start": "node dist/app.js",
        "setup-db": "node -r ts-node/register scripts/setup-db.ts",
        "seed": "node -r ts-node/register scripts/seed-data.ts"
    },
    "keywords": [
        "twitter",
        "social-media",
        "typescript",
        "express",
        "postgresql",
        "redis"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "pg": "^8.11.3",
        "redis": "^4.6.10",
        "bcrypt": "^5.1.1",
        "jsonwebtoken": "^9.0.2",
        "dotenv": "^16.3.1",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "morgan": "^1.10.0",
        "validator": "^13.11.0",
        "swagger-ui-express": "^5.0.0",
        "swagger-jsdoc": "^6.2.8"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/pg": "^8.10.9",
        "@types/bcrypt": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/cors": "^2.8.17",
        "@types/morgan": "^1.9.9",
        "@types/validator": "^13.11.7",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/swagger-jsdoc": "^6.0.4",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}